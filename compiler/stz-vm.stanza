defn class-name (c:VMClass, ids:VMIds) -> String :
  match(class-rec(ids, id(c))) :
    (r:Rec) :
      to-string(name(id(r)))
    (_:False) :
      defn name! (n:Int) : name(id(class-rec(ids,n) as Rec))
      string-join(seq(name!, parents(c)), "&")

defn class-names (cs:Seqable<LoadedClass>, ids:VMIds) -> Tuple<KeyValue<Int,String>> :
  to-tuple $ for c in seq(class,cs) seq :
    id(c) => class-name(c,ids)

