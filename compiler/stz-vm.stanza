lostanza defn float-to-bits (x:float) -> int :
  return ($ls-prim bits x)

lostanza defn double-to-bits (x:double) -> long :
  return ($ls-prim bits x)

lostanza defn bits-to-float (x:int) -> float :
  return ($ls-prim fnum x)

