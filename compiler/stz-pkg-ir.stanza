      defunion klscomm (KLSComm) :
         KLSIgnoreComm: (exp:klsexp) 
         KLSSet: (exp:kloc, value:klsexp) 
         KLSLabels: (blocks:slist(klscomm as KLSLabeledBlock)) 
         KLSLabel: (n:int) 
         KLSLabeledBlock: (n:int, args:slist(int), types:slist(klstype), body:klscomm) 
