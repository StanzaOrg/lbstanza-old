;                          Id Generation
;                          =============

val ID-COUNTER = to-seq(1000000 to false)
val STABLE-IDS = HashTable<Int,True>()

public defn fresh-id () :
   next(ID-COUNTER)
   
public defn stable-id () :
   val id = fresh-id()
   STABLE-IDS[id] = true
   id

public defn stable-id? (n:Int) :
   key?(STABLE-IDS, n)


