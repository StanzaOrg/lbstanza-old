defn force-remove-checks (epackage:EPackage) -> EPackage :
  defn convert-body (e:EBody) :
    val buffer = BodyBuffer(e)
    for i in ins(e) do :
      match(i) :
        (i:ECheck) : false
        (i:ECheckSet) : false
        (i:ECheckLength) : false
        (i) : emit(buffer, i)
    to-body(buffer)
  defn convert (e:ELBigItem) :
    match(map(convert,e)) :
      (e:EBody) : convert-body(e)
      (e) : e
  convert(epackage) as EPackage

