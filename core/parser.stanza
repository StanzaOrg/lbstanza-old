;============================================================
;==================== Exceptions ============================
;============================================================

public deftype PatternException <: Exception

defn PatternException (msg) :
   new PatternException :
      defmethod print (o:OutputStream, this) : print(o, msg)

defn PatternExceptionInPackage (package, msg) :
   new PatternException :
      defmethod print (o:OutputStream, this) :
         print(o, "In syntax package %_: %_" % [package, msg])

public defstruct NoMatchException <: PatternException :
   causes: List<Exception>
defmethod print (o:OutputStream, e:NoMatchException) :
   print(o, "No Match:")
   for io in o do-indented :
      for cause in causes(e) do :
         print(io, "\n%_" % [cause])

public defstruct NoSyntaxPackage <: PatternException :
  name: Symbol
defmethod print (o:OutputStream, e:NoSyntaxPackage) :
  print(o, "Could not resolve syntax package %~." % [name(e)])