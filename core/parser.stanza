val EMPTY-BINDINGS = Array<?>(0)
defn BindingArray (n:Int) :
   if n == 0 : EMPTY-BINDINGS
   else : Array<(() -> ?)>(n)
defn BindingArray<T> (n:Int, v:T) :
   if n == 0 : EMPTY-BINDINGS
   else : Array<T>(n, v)
defn setter (b:Array<(() -> ?)>) :
   set{b, _:Int, _:() -> ?}

