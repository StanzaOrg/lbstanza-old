defpackage core/debug-table :
  import core
  import collections

;============================================================
;====================== Binary Layout =======================
;============================================================

;Represents the entire debug table.
public lostanza deftype DebugTable :
  num-packages:long
  packages:ptr<PackageDebugInfo> ...

;Represents the debug info for definitions within a specific package.
public lostanza deftype PackageDebugInfo :
  num-entries:long
  package:ptr<byte>
  entries:ptr<DebugEntry> ...

;Represents the entry for one variable.
public lostanza deftype DebugEntry :
  name:ptr<byte>
  address:ptr<?>