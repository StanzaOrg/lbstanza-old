public defn children (t:Type) -> Many<Type> :
   val ts = Vector<Type>(4)
   do(add{ts, _}, t)
   ts

public defn children (t:LSType) -> Many<LSType> :
   val ts = Vector<LSType>(4)
   do(add{ts, _:LSType}, t)
   ts

;                        Mappers and Doers
