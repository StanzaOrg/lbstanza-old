defprinter (e:LSExp) :
   LSVar :
      custom{"$v%_" % [n(e)]}
   LSNew :
      ($ls-new n targ args ...)
   LSArray :
      ($ls-array n targ length args ...)
   LSStruct :
      ($ls-struct n targ args ...)
   LSAddr :
      ($ls-addr exp)
   LSDeref :
      ($ls-deref exp)
   LSSlot :
      ($ls-slot exp index)
   LSField :
      ($ls-field exp name)
