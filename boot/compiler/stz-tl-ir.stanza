public defn dor (fe: LSExp -> ?, e: LSExp) :
   defn fc (c:LSComm) : dor(fe, c)
   do(fe, e)
   do(fc, e)
   
public defn dor (fe: LSExp -> ?, c: LSComm) :
   defn fc (e:LSComm) : dor(fe, e)
   do(fe, c)
   do(fc, c)

public defn mapr (f: Type -> Type, t:LSType) :
   defn ft (t:LSType) : mapr(f, t)
   map(ft, map(f, t))